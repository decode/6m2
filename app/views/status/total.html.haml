#equal-left
  .bordershape
    = t('site.m_task_sum') + @month_tasks_sum.to_s
  #chartdiv_month{:style => 'height:300px;width:90%;'}
  :javascript
    $.jqplot('chartdiv_month',  [#{@month}],
      { 
      title:"#{t('site.month_title_task')}",
      axes:{yaxis:{min:0}, xaxis:{min:1, max:31}},
      series:[{color:'#5FAB78'}],
      grid:{background:'#eaf4f5'}
      }
    );
#equal-right
  .bordershape
    = t('site.m_trade_sum') + @month_trades_sum.to_s
  #month_trade{:style => 'height:300px;width:90%;'}
  :javascript
    $.jqplot('month_trade',  [#{@month_t}],
      { 
      title:"#{t('site.month_title_trade')}",
      axes:{yaxis:{min:0}, xaxis:{min:1, max:31}},
      series:[{color:'#5FAB78'}],
      grid:{background:'#eaf4f5'}
      }
    );
#wide
  #equal-left
    .bordershape
      %table
        %caption= t 'account.point'
        %tr
          %th= t 'site.login_name'
          %th= t 'account.point'
          %th= t 'account.account_money'
          %th= t 'account.score'
        - @credit_users.each do |u|
          %tr
            %td= link_to u.username, u
            %td= u.account_credit
            %td= u.account_money
            %td= u.score

    .bordershape
      %table
        %caption= t 'account.account_money'
        %tr
          %th= t 'site.login_name'
          %th= t 'account.point'
          %th= t 'account.account_money'
          %th= t 'account.score'
        - @money_users.each do |u|
          %tr
            %td= link_to u.username, u
            %td= u.account_credit
            %td= u.account_money
            %td= u.score

  #equal_right
    .bordershape
      %table
        %caption= t 'account.score'
        %tr
          %th= t 'site.login_name'
          %th= t 'account.point'
          %th= t 'account.account_money'
          %th= t 'account.score'
        - @score_users.each do |u|
          %tr
            %td= link_to u.username, u
            %td= u.account_credit
            %td= u.account_money
            %td= u.score

    .bordershape
      %table
        %caption= t 'account.login_count'
        %tr
          %th= t 'site.login_name'
          %th= t 'account.point'
          %th= t 'account.account_money'
          %th= t 'account.score'
          %th= t 'account.login_count'
        - @lazy_users.each do |u|
          %tr
            %td= link_to u.username, u
            %td= u.account_credit
            %td= u.account_money
            %td= u.score
            %td= u.sign_in_count
