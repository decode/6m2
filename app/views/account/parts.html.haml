%table
  %caption
  %thead
    %tr
      %th= t 'participant.user'
      %th= t 'formtastic.labels.participant.part_type'
      %th= t 'formtastic.labels.participant.name'
      %th= t 'formtastic.labels.participant.part_id'
      %th= t 'formtastic.labels.participant.status'
      %th= t 'formtastic.labels.participant.active'
      %th= t 'global.task'
      %th= t 'global.created_at'
      %th
      %th
      %th
  - @participants.each do |participant|
    %tr
      %td= participant.user.username
      %td= participant.part_type
      %td= participant.name
      %td= participant.part_id
      %td= participant.status
      %td= participant.active
      %td= participant.tasks.length
      %td= l participant.created_at
      %td= link_to t('global.show'), participant
      %td= link_to t('global.edit'), edit_participant_path(participant)
      %td= link_to t('global.delete'), participant, :confirm => t('site.are_you_sure'), :method => :delete if admin?
= will_paginate @participants
