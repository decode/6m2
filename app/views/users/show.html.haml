.shadow
  %p
    %b= t 'site.login_name'
    = @user.username
  %p
    %b= t 'page.email'
    = @user.email
  %p
    %b= t 'account.role'
    = @user.role_objects.map { |role| role.name }

  %p
    %b Account:
    = @user.account_money

  = link_to t('global.edit'), edit_user_path(@user)
  \|
  = link_to t('global.back'), :back
