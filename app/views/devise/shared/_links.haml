- if controller_name != 'sessions'
  = link_to t("site.login"), new_session_path(resource_name)
- if devise_mapping.registerable? && controller_name != 'registrations'
  \| 
  = link_to t("site.register"), new_registration_path(resource_name)
- if devise_mapping.recoverable? && controller_name != 'passwords'
  \| 
  = link_to t("site.forgot_password"), new_password_path(resource_name)
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  \| 
  = link_to t("site.no_password_confirm"), new_confirmation_path(resource_name)
- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  \| 
  = link_to t("site.no_unlock_instructions"), new_unlock_path(resource_name)
